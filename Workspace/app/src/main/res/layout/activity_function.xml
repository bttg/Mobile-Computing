<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bluebackground">

    <Button
        android:id="@+id/BtnEditProfile"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="156dp"
        android:onClick="btnChgProfile"
        android:text="Edit Profile"
        android:background="@drawable/main_record_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnDisplayPiechart"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:onClick="btnShowPieChart"
        android:text="Expense Chart"
        android:background="@drawable/main_record_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnEditProfile" />

    <Button
        android:id="@+id/EmailMe"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/main_record_bg"
        android:text="Email Me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnDisplayPiechart" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="414dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailMe"
        app:srcCompat="@mipmap/catrow" />


</androidx.constraintlayout.widget.ConstraintLayout>